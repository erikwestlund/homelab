---
# Homelab Secrets Configuration
# Copy this to secrets.yaml and fill in your actual values
# DO NOT commit secrets.yaml to git!

# Plex
plex_claim_token: ""  # Get from https://www.plex.tv/claim

# Tailscale
tailscale_auth_key: ""  # Generate from https://login.tailscale.com/admin/settings/keys

# Home Assistant
home_assistant_api_token: ""
home_assistant_trusted_proxies: []

# Pi-hole
pihole_web_password: ""

# MQTT/Zigbee
mqtt_username: "homelab"
mqtt_password: ""

# Database passwords
postgres_password: ""
mysql_root_password: ""

# API Keys
openweather_api_key: ""
cloudflare_api_token: ""

# Notification services
discord_webhook_url: ""
telegram_bot_token: ""
telegram_chat_id: ""

# Backup credentials
s3_access_key: ""
s3_secret_key: ""
s3_bucket: ""
s3_endpoint: ""

# Domain/SSL
domain_name: ""
letsencrypt_email: ""

# VPN
wireguard_private_key: ""
wireguard_public_key: ""

# Portainer
portainer:
  admin_password: ""  # Leave empty to auto-generate

# PeaNUT (UPS Monitoring)
peanut:
  password: ""  # For NUT server authentication

# Nginx Proxy Manager
npm:
  admin_email: "admin@example.com"
  admin_password: ""  # NPM admin password
  ssl_email: "admin@pequod.sh"  # Email for Let's Encrypt
  additional_allowed_ips: []  # Additional IPs to allow (besides local network)

# Monitoring Stack
monitoring:
  influxdb:
    username: "admin"  # Optional, defaults to 'admin'
    password: ""       # Leave empty to auto-generate
    token: ""          # Leave empty to auto-generate
  grafana:
    username: "admin"  # Optional, defaults to 'admin'
    password: ""       # Leave empty to auto-generate