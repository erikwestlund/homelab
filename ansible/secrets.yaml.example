---
# Secrets configuration for homelab services
# Copy this file to secrets.yaml and fill in your actual values
# DO NOT commit secrets.yaml to version control!

# Nginx Proxy Manager
npm:
  admin_email: "admin@example.com"  # This is the username!
  admin_password: "changeme"
  ssl_email: "ssl@example.com"
  cloudflare_api_token: "your_cloudflare_token"

# Monitoring Stack
monitoring:
  influxdb:
    username: "admin"
    password: "changeme"
    token: "generate_a_long_random_token"
  grafana:
    username: "admin"
    password: "changeme"

# Portainer
portainer:
  admin_password: "changeme"

# PeaNUT
peanut:
  password: "changeme"

# NAS/Media Server
nas:
  media_server:
    host: "nas.lan"
    username: "media"
    password: "changeme"

# Development VM
dev_vm:
  github_user: "your-github-username"
  github_email: "your-email@example.com"
  github_token: "ghp_your_personal_access_token"
  openrouter_api_key: "sk-or-v1-your_openrouter_api_key"  # For zen MCP
  docker_hub_user: ""  # Optional
  docker_hub_token: ""  # Optional