# InfluxDB Configuration
INFLUXDB_ADMIN_USER=admin
INFLUXDB_ADMIN_PASSWORD=changeme123!
INFLUXDB_ORG=homelab
INFLUXDB_BUCKET=metrics
INFLUXDB_ADMIN_TOKEN=changeme-super-secret-auth-token

# Grafana Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=changeme456!

# Timezone
TZ=America/New_York

# Storage Configuration
# Retention period: 1825d = 5 years, 3650d = 10 years
INFLUXDB_RETENTION=1825d

# Storage paths (update these to your dedicated SSD mount)
STORAGE_PATH=/mnt/monitoring